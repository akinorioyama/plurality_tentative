<script>
let urlParameters = new Map(window.location.search.slice(1).split('&').map(param => param.split('=')))

let tabs = document.querySelectorAll('select');
let panels = document.querySelectorAll('.info-box article');
let options = document.querySelectorAll('select option');

setTabHandler(tabs[0]);

function setTab(e) {

  const selectedIndex = this.selectedIndex;

  for(let i = 0; i < panels.length; i++) {
    if(i == ( selectedIndex - 1) ) {
        panels[i].setAttribute('aria-hidden', 'false');
        panels[i].setAttribute('class', 'active-panel');
    } else {
        panels[i].setAttribute('aria-hidden', 'true');
        panels[i].classList.remove("active-panel")
    }

  }
}

function setTabHandler(tab) {
  tab.addEventListener('change', setTab);
}
setMode(urlParameters);
function setMode(urlParameters) {
  let languageSelected;

  if (urlParameters) {
      languageSelected = urlParameters.get("lang");
      for(let i = 1; i < tabs[0].length; i++) {
        if( tabs[0][i].value == languageSelected ) {
            panels[i-1].setAttribute('aria-hidden', 'false');
            panels[i-1].setAttribute('class', 'active-panel');
            options[i].selected = true;
        } else {
            panels[i-1].setAttribute('aria-hidden', 'true');
            panels[i-1].classList.remove("active-panel")
            options[i].selected = false;
        }

      }

  }
}
</script>


